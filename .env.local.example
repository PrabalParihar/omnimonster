# Swap Sage Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# EVM Configuration
# =============================================================================

# Contract Addresses (auto-populated by deployment scripts)
EVM_HTLC_ADDRESS=
EVM_CHAIN_ID=

# Private Key for EVM deployments (without 0x prefix)
# Generate: openssl rand -hex 32
# Or use: npx hardhat vars set PRIVATE_KEY
PRIVATE_KEY=

# RPC URLs for different networks
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=

# Gas reporting (optional)
REPORT_GAS=false
COINMARKETCAP_API_KEY=

# =============================================================================
# Cosmos Configuration
# =============================================================================

# Contract Details (auto-populated by deployment scripts)
COSMOS_HTLC_ADDRESS=
COSMOS_CHAIN_ID=swap-sage-1
COSMOS_CODE_ID=

# RPC URLs for different Cosmos networks
COSMOS_RPC_URL=http://localhost:26657
OSMOSIS_TESTNET_RPC=https://rpc.osmotest5.osmosis.zone
OSMOSIS_MAINNET_RPC=https://rpc.osmosis.zone

# Wallet configuration
COSMOS_WALLET=test-wallet
COSMOS_MNEMONIC=

# =============================================================================
# Cross-Chain Configuration
# =============================================================================

# Default amounts for testing (in wei/micro units)
DEFAULT_LOCK_AMOUNT_ETH=10000000000000000  # 0.01 ETH
DEFAULT_LOCK_AMOUNT_ATOM=1000000           # 1 ATOM (in uatom)

# Default timelock duration (in seconds)
DEFAULT_TIMELOCK_DURATION=3600  # 1 hour

# =============================================================================
# Application Configuration
# =============================================================================

# Next.js configuration
NEXT_PUBLIC_EVM_CHAIN_ID=31337
NEXT_PUBLIC_COSMOS_CHAIN_ID=swap-sage-1
NEXT_PUBLIC_EVM_RPC_URL=http://localhost:8545
NEXT_PUBLIC_COSMOS_RPC_URL=http://localhost:26657

# Contract addresses for frontend
NEXT_PUBLIC_EVM_HTLC_ADDRESS=
NEXT_PUBLIC_COSMOS_HTLC_ADDRESS=

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug logs
DEBUG=false
VERBOSE_LOGGING=false

# Test configuration
TEST_TIMEOUT=30000
SKIP_INTEGRATION_TESTS=false

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret for session management (generate with: openssl rand -base64 32)
JWT_SECRET=

# API rate limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# External Services
# =============================================================================

# Optional: Price feeds for token valuations
COINGECKO_API_KEY=
COINMARKETCAP_API_KEY=

# Optional: Monitoring and analytics
SENTRY_DSN=
MIXPANEL_PROJECT_TOKEN=

# =============================================================================
# Faucet Configuration (for testnets)
# =============================================================================

# Faucet URLs for getting test tokens
SEPOLIA_FAUCET=https://sepoliafaucet.com
GOERLI_FAUCET=https://goerlifaucet.com
OSMOSIS_TESTNET_FAUCET=https://faucet.osmotest5.osmosis.zone

# =============================================================================
# Database Configuration (if using)
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/swapsage

# Redis connection (for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Production Configuration
# =============================================================================

# Domain configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Notes
# =============================================================================

# Important Security Notes:
# 1. Never commit this file with real values to version control
# 2. Use environment-specific .env files for different deployments
# 3. Rotate keys regularly, especially for production
# 4. Use secure key management services for production secrets
# 5. Monitor contract addresses for changes

# Deployment Workflow:
# 1. Fill in RPC URLs and private keys
# 2. Run: pnpm compile:evm && pnpm compile:cosmos
# 3. Run: pnpm deploy:evm && pnpm deploy:cosmos
# 4. Run: pnpm test:htlc to verify deployments
# 5. Update frontend with new contract addresses

# Troubleshooting:
# - If EVM deployment fails: Check private key, RPC URL, and gas settings
# - If Cosmos deployment fails: Check wasmd installation and wallet setup
# - If tests fail: Ensure contracts are deployed and addresses are correct
# - For network issues: Verify RPC endpoints are accessible