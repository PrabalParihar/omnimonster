{
  "name": "fusion-swap",
  "version": "0.1.0",
  "private": true,
  "description": "Decentralized token exchange protocol with pool-based liquidity and gasless claims",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "compile:evm": "cd contracts/evm && pnpm build",
    "test:evm": "cd contracts/evm && pnpm test",
    "frontend:dev": "cd apps/frontend && pnpm dev",
    "frontend:build": "cd apps/frontend && pnpm build",
    "test:full-system": "tsx scripts/test-full-system.ts",
    "test:networks": "tsx scripts/test-full-system.ts --networks-only",
    "test:database": "tsx scripts/test-full-system.ts --database-only",
    "test:api": "tsx scripts/test-full-system.ts --api-only",
    "setup:env": "tsx scripts/setup-environment.ts",
    "setup:env-template": "tsx scripts/setup-environment.ts --template",
    "setup:test": "tsx scripts/setup-test-environment.ts",
    "test:backend": "tsx scripts/test-complete-backend.ts",
    "test:cli": "tsx scripts/test-complete-system-cli.ts",
    "test:prd": "tsx scripts/test-prd-complete-flow.ts",
    "test:prd-funded": "tsx scripts/test-prd-flow-funded.ts",
    "deploy:monsters": "tsx scripts/deploy-monster-tokens.ts",
    "start:resolver": "cd services/resolver && pnpm dev",
    "test:resolver": "tsx scripts/test-resolver-service.ts",
    "resolver:start": "tsx scripts/start-resolver-simple.ts",
    "deploy:monad": "tsx scripts/deploy-monad-complete.ts",
    "test:cross-chain": "tsx scripts/test-cross-chain-complete.ts",
    "demo:swaps": "tsx scripts/demo-actual-swap.ts",
    "test:resolver-direct": "tsx scripts/test-resolver-direct.ts",
    "swap:cross-chain": "tsx scripts/cross-chain-swap.ts",
    "swap:monster-to-omni": "tsx scripts/monster-to-omni-swap.ts",
    "swap:omni-to-monster": "tsx scripts/omni-to-monster-swap.ts",
    "swap:test-all": "npm run swap:monster-to-omni 1 && npm run swap:omni-to-monster 1",
    "swap:demo": "tsx scripts/cross-chain-swap.ts monster-to-omni 5",
    "test:prd-cross-chain": "tsx scripts/test-prd-cross-chain-flow.ts"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@turbo/gen": "^1.12.4",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "turbo": "^1.12.4"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.61",
      "@types/react-dom": "^18.2.19"
    }
  }
}