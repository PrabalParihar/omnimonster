{
  "name": "swap-sage",
  "version": "0.1.0",
  "private": true,
  "description": "Full-stack cross-chain swap dApp",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "deploy:evm": "cd contracts/evm && pnpm deploy:evm",
    "deploy:cosmos": "cd contracts/cosmos && ./scripts/cosmos-deploy.sh",
    "test:evm": "cd contracts/evm && pnpm test",
    "test:cosmos": "cd test && npx jest cosmos-htlc.ts",
    "test:htlc": "pnpm test:evm && pnpm test:cosmos",
    "smoke:htlc": "tsx scripts/htlc-smoke.ts --local",
    "compile:evm": "cd contracts/evm && pnpm build",
    "compile:cosmos": "cd contracts/cosmos && cargo wasm",
    "cli:swap": "tsx cli-swap.ts",
    "deploy-setup": "tsx deploy-setup.ts",
    "deploy:sepolia": "tsx deploy-sepolia.ts",
    "deploy:polygon-amoy": "tsx deploy-polygon-amoy.ts",
    "frontend:dev": "cd apps/frontend && pnpm dev",
    "frontend:build": "cd apps/frontend && pnpm build",
    "frontend:test-api": "cd apps/frontend && npx tsx test-api.ts"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "dotenv": "^16.6.1",
    "inquirer": "^9.3.7",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@turbo/gen": "^1.12.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "turbo": "^1.12.4"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.61",
      "@types/react-dom": "^18.2.19"
    }
  }
}